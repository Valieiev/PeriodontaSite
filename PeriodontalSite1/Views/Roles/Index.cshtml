@model IEnumerable<PeriodontalSite1.Models.Account.ApplicationRole>

@{
    ViewBag.Title = "Роли";
}

<h2>Роли</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Name.ToString()</td>
            <td>@item.Description</td>

            <td>
                @Html.ActionLink("Назначить пользователей", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
</table>