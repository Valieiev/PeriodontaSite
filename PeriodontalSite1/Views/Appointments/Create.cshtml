@model PeriodontalSite1.ViewModel.Appointment.AppointmentCreateViewModel
<h2>Создание записи</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">

            @using (Html.BeginForm("Create", "Appointments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Введите данные записи</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.PatientId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PatientId, new SelectList(Model.Patients, "Value", "Text", new { htmlAttributes = new { @class = "form-control" } }))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.UserId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserId, new SelectList(Model.Users, "Value", "Text", new { htmlAttributes = new { @class = "form-control" } }))
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentStatus, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.AppointmentStatus, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(m => m.VisitDate, new { htmlAttribute = new { @class = "datetimepicker" }, @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.VisitDate, new { htmlAttribute = new { @class = "datetimepicker" }, @class = "form-control" })
                @Html.ValidationMessageFor(m => m.VisitDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
}
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">

    $(function () {
        $('#VisitDate').datetimepicker({
            format: "YYYY/MM/DD HH:mm:ss",
            inline: true,
            minDate: new Date(),
            sideBySide: true
        });
    });
</script>
