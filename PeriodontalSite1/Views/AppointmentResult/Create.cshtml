@model PeriodontalSite1.ViewModel.AppointmentsResult.AppointmentResultCreateViewModel
<h2>Расчет цены:</h2>
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<link href="~/Content/combobox.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">

            @using (Html.BeginForm("Create", "AppointmentResult", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Enter Reception Details Info</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Count, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Count, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Count, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.AppoitmentId, "AppoitmentId", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("AppoitmentId", Model.Appoitment, "", htmlAttributes: new { @class = "form - control combobox" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PriceId, "PriceId", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("PriceId", Model.Price, "", htmlAttributes: new { @class = "form-control combobox" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Создать" class="btn btn-default" />
                        <p><a href="http://www.periodontalchart-online.com/ru/" target="_blank">Парадонтальна картка</a></p>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

<script src="~/Scripts/jquery.combobox.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/bootstrap-datepicker.js" charset="UTF-8"></script>

<script type="text/javascript">

    $(function () {
        $('#FromDate').datepicker({
            minDate: Date.now()
        });
    });
    $(function () {
        $('#ToDate').datepicker({
            minDate: Date.now()
        });
    });
</script>


