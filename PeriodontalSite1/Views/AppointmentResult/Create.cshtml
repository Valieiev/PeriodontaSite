@model  List<PeriodontalSite1.ViewModel.AppointmentsResult.AppointmentResultCreateViewModel>
<h2>Расчет цены:</h2>
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<link href="~/Content/combobox.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">

            @using (Html.BeginForm("Create", "AppointmentResult", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Введите данные о приеме.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                for (int i = 0; i < Model.Count; i++)
                {
                    @Html.HiddenFor(m => m[i].AppoitmentId)




                    <div class="form-group">
                        @Html.LabelFor(m => m[i].Count, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m[i].Count, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m[i].Count, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m[i].PriceId, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m[i].PriceId, Model[i].Price, "" , htmlAttributes: new { @class = "form-control combobox" })
                        </div>
                    </div>

                }
                @Html.ActionLink("Добавить услугу", $"Create", new { AppoitmentId = Model[0].AppoitmentId, Modelcount = Model.Count }, null)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Создать" class="btn btn-default" />
                        <p><a href="http://www.periodontalchart-online.com/ru/" target="_blank">Парадонтальна картка</a></p>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

<script src="~/Scripts/jquery.combobox.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/bootstrap-datepicker.js" charset="UTF-8"></script>




