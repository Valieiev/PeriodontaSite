@using PagedList.Mvc
@model PeriodontalSite1.ViewModel.PriceViewModel

@{
    /**/

    ViewBag.Title = "Цены";
}

<h2>Цены</h2>
@Html.ActionLink("Create", "Create") |
<table class="table">
    <tr>
        <th>Услуга</th>
        <th>Цена</th>
        <th>Дата с</th>
        <th>Дата до</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Prices)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Services.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>

            <td>
                @Html.ActionLink("Edit", $"Edit", new { id = item.PriceId })

                @Html.ActionLink("Delete", $"Delete", new { id = item.PriceId }, new { onclick = "return confirm('Вы уверены?')", @class = "button" })
            </td>
        </tr>
    }
</table>
Страница @(Model.Prices.PageCount < Model.Prices.PageNumber ? 0 : Model.Prices.PageNumber) из @Model.Prices.PageCount

@Html.PagedListPager(Model.Prices, page => Url.Action($"Index", new { page }))